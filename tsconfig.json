{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowJs": true,
		"jsx": "preserve",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"baseUrl": "./src",
		"paths": {
			"assets/*": ["./assets/*"],
			"components/*": ["./components/*"],
			"hooks/*": ["./hooks/*"],
			"styles/*": ["./styles/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.tsx"],
	"exclude": ["node_modules"]
}
